#!/bin/bash


timedatectl set-timezone Europe/Amsterdam && echo LANG=en_GB.UTF-8 > /etc/locale.conf && export LANG=en_GB.UTF-8 && locale-gen && echo barch > /etc/hostname &&
passwd root && pacman -S grub && pacman -S efibootmgr && grub-install --target=x86_64-efi --efi-directory=/boot && grub-mkconfig -o /boot/grub/grub.cfg &&
pacman -S xorg xorg-server && echo "exec startkde" > ~/.xinitrc && pacman -S plasma-desktop && pacman -S kde-applications-meta && pacman -S breeze-gtk breeze-kde4 kde-gtk-config && pacman -S sddm && systemctl start sddm.service && systemctl enable sddm.service && systemctl enable sddm && nano /etc/sddm.conf && systemctl enable NetworkManager.service && pacman -S konsole dolphin firefox kate && echo LAATSTE STAP locale-gen INVOEREN
